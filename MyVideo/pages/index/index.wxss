/**index.wxss**/
.vedioAll {
  border-top: 0.1px transparent solid;
}

.vedio {
  margin: 0rpx auto 20rpx auto;
  width: 100%;
  height: 1260rpx;
}

.vedio video {
  width: 100%;
  height: 100%;
  position: relative;
}

.playBtn {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  opacity: .5;
}

.all {
  width: 150rpx;
  height: 500rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  position: absolute;
  top: 28%;
  left: 80%;
}

.head {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.like {
  width: 80rpx;
  height: 80rpx;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  text-align: center;
}

.inner {
  width: 80rpx;
  height: 80rpx;
}

.likeCount {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-weight: bold;
  color: #fff;
}

.talk {
  width: 80rpx;
  height: 80rpx;
}

.transmit {
  width: 80rpx;
  height: 80rpx;
}

.msgArea {
  width: 100%;
  position: fixed;
  top: 84%;
}

.videoMsg {
  margin: 0 auto;
  width: 90%;
  height: 200rpx;
  text-align: left;
  line-height: 40rpx;
  overflow-wrap: normal;
  color: #fff;
  font-weight: bold;
  overflow: hidden;
}

.speeded {
  text-align: center;
  font-size: 24px;
  line-height: 150rpx;
}

.videobarback {
  width: 100%;
  position: absolute;
  top: 97.5%;
  height: 30rpx;
  z-index: 1;
}

.videobar {
  width: 0%;
  height: 10rpx;
  background-color: #A9A9A9;
  transform: translateY(20rpx);
}

.timeVisible {
  width: 300rpx;
  height: 100rpx;
  background-color:rgba(0, 0, 0, .6);
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  font-weight: bold;
}