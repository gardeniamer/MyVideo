/* pages/components/userInput/userInput.wxss */
.bgc {
  width: 100%;
  height: 1560rpx;
  background-color: rgba(0, 0, 0, .1);
  position: absolute;
  top: 0;
  left: 0;
}

.login {
  /* margin: 0 auto; */
  width: 80%;
  height: 400rpx;
  background-color: #fff;
  position: absolute;
  top: 30%;
  left: 50%;
  transform: translate(-50%,-50%);
  border-radius: 30rpx;
}

.login {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.phoneInput,.password {
  width: 100%;
  height: 150rpx;
}

.phoneInput input, 
.password input {
  margin: 0 auto;
  width: 50%;
  height: 80rpx;
  font-size: 14px;
  border-bottom: 1px solid #000;
  text-align: center;
  transform: translateY(34rpx);
  transition: all .5s;
}

.active {
  margin: 0 auto;
  width: 50%;
  height: 80rpx;
  font-size: 14px;
  border-bottom: 1px solid #1E90FF !important;
  text-align: center;
  transform: translateY(34rpx);
  transition: all .8s;
}

.confirm {
  width: 100%;
  flex: 1;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.submit {
  width: 160rpx;
  height: 60rpx;
  background-color: #87CEFA;
  line-height: 60rpx;
  text-align: center;border-radius: 30rpx;
  font-size: 14px;
  font-weight: bold;
  color: #fff;
}
