/* pages/user/user.wxss */
.userAll {
  width: 100%;
  height: 1560rpx;
  background-color: #FAFAFB;
}

.headAll {
  margin: 0 auto;
  width: 600rpx;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.head {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  transform: translate(-16rpx,10rpx);
}

.btn {
  width: 180rpx !important;
  height: 180rpx !important;
  border-radius: 50%;
  z-index: 1;
  background: transparent;
}

.headWord {
  font-weight: bold;
  font-size: 16px;
  transform: translateX(100rpx);
}

.exit {
  margin: 0 auto;
  width: 80%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color:#DC143C;
  font-size: 20px;
  color: #fff;
  font-weight: bold;
  border-radius: 50rpx;
}